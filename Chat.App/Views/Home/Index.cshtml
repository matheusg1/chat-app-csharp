@{
    ViewData["Title"] = "Home Page";
}

<div class="container col-12">
    <div class="row">
        <div class="col-3">Connection Id</div>
        <div class="col-6"><span id="connectionId" /></div>
    </div>
    <div class="form-group">
        <label for="usuario">Usuário</label>
        <input type="text" id="usuario" class="form-control" />
    </div>
    <div class="form-group">
        <label for="mensagem">Mensagem</label>
        <textarea class="form-control" id="mensagem" rows="2"></textarea>
    </div>
    <input type="button" class="btn btn-primary" id="send" value="Enviar Mensagem" />
    <input type="button" class="btn btn-primary" id="sendPrivate" value="Enviar Mensagem Privada" />
    <div class="form-group">
        <label for="usuarioDestinatario">Destinatário</label>
        <input type="text" id="usuarioDestinatario" class="form-control" />
    </div>
    <div class="form-group">
        <label for="admin">Administrador</label>
        <input type="text" id="admin" class="form-control" />
    </div>
</div>
<div class="row">
    <div class="col-12">
        <hr />
    </div>
</div>
<div class="container col-6">
    <ul class="list-group" id="messagesList"></ul>
</div>

<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
<script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>